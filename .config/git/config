[init]
        defaultBranch = main
[user]
        name = name
        email = email
        signingkey = /path/to/signingkey
[gpg]
        format = ssh
[commit]
        gpgsign = true
[tag]
        gpgSign = true
# If .git directory is inside work directory, include work.config
[includeIf "gitdir:~/work/**"]
        path = ~/.config/git/work.config
